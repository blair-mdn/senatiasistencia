<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3E5AC1"
    tools:context=".VisitanteActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATOS DEL VISITANTE"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <LinearLayout
        android:id="@+id/containerForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="16dp"
        android:elevation="6dp"
        android:layout_margin="24dp"
        android:clipToOutline="true"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre y Apellido:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/etNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Ingrese nombre completo"
            android:inputType="textPersonName"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="N° de DNI:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/etDni"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Ingrese DNI"
            android:inputType="number"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Asunto:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/etAsunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="12dp"
            android:hint="Ingrese motivo de la visita"
            android:inputType="text"
            android:backgroundTint="@color/black"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Área:"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@android:color/black" />

        <Spinner
            android:id="@+id/spinnerArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:padding="8dp"
            android:entries="@array/areas"
            android:layout_marginBottom="16dp"/>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="REGISTRAR VISITA"
            android:textAllCaps="true"
            android:backgroundTint="#1976D2"
            android:textColor="@android:color/white"
            android:padding="12dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="422dp"
        android:layout_height="564dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/containerForm"
        app:layout_constraintVertical_bias="0.742"
        app:srcCompat="@mipmap/ic_launcher_robot" />

</androidx.constraintlayout.widget.ConstraintLayout>
