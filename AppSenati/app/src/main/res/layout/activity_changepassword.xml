<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:padding="24dp">


    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cambiar_contrasena"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/ivLockIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_lock"
        android:contentDescription="@string/icono_candado"
        android:layout_marginTop="24dp"
        app:tint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Campo contraseña actual -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCurrentPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="@string/contrasena_actual"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/hintTextColor"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/ivLockIcon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingStart="40dp"
            android:paddingEnd="8dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/hintTextColor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo nueva contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/nueva_contrasena"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/hintTextColor"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/tilCurrentPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingStart="40dp"
            android:paddingEnd="8dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/hintTextColor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo confirmar nueva contraseña -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/confirmar_nueva_contrasena"
        app:boxStrokeColor="@color/colorPrimary"
        app:hintTextColor="@color/hintTextColor"
        app:startIconDrawable="@drawable/ic_lock"
        app:startIconTint="@color/colorPrimary"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/colorPrimary"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintTop_toBottomOf="@id/tilNewPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:paddingStart="40dp"
            android:paddingEnd="8dp"
            android:textColor="@color/textColorPrimary"
            android:textColorHint="@color/hintTextColor" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Botón cambiar contraseña -->
    <Button
        android:id="@+id/btnChangePassword"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="@string/cambiar_contrasena"
        android:textColor="@color/buttonTextColor"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/buttonColor"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Botón cancelar -->
    <Button
        android:id="@+id/btnCancel"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="12dp"
        android:text="@string/cancelar"
        android:textColor="@color/textColorSecondary"
        android:textSize="16sp"
        android:backgroundTint="@color/darkSurface"
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="@color/textColorSecondary"
        app:layout_constraintTop_toBottomOf="@id/btnChangePassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>